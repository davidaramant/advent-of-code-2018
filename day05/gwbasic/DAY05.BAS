10 OPEN"I", 1, "INPUT.TXT"
20 IF EOF(1) THEN 90
30 CHAR1$ = INPUT$(1, #1)
40 CHAR2$ = RIGHT$(P$,1)
50 GOSUB 100
60 IF SHOULDREPLACE% THEN P$ = LEFT$(P$, LEN(P$)-1) ELSE P$ = P$ + CHAR1$
70 GOTO 20
80 PRINT LEN(P$)
90 END
100 REM See if character pair should be replaced
110 IF CHAR2$ = "" GOTO 190
120 CHAR1ASC% = ASC(CHAR1$)
130 CHAR2ASC% = ASC(CHAR2$)
140 IF CHAR1ASC% < 97 THEN CHAR1LOW%=1 ELSE CHAR1LOW%=0
150 IF CHAR2ASC% < 97 THEN CHAR2LOW%=1 ELSE CHAR2LOW%=0
160 IF CHAR1LOW% THEN CHAR1ASC% = CHAR1ASC% + 32
170 IF CHAR2LOW% THEN CHAR2ASC% = CHAR2ASC% + 32
180 IF CHAR1ASC% = CHAR2ASC% AND CHAR1LOW% <> CHAR2LOW% THEN SHOULDREPLACE%=1 ELSE SHOULDREPLACE%=0
190 RETURN
